extends ../layout.pug

block title
    title WWMAIRS - #{entry.name}

block append scripts
    script(type="module").
        import { createApp, ref } from "vue"
        import Entry from "/vue/entry.js"
        const cart = ref({});
        const app = createApp({
            components: {
                Entry
            },
            setup() {
                var entry = JSON.parse(`!{JSON.stringify(entry)}`);
                return { entry }
            }
        })
        app.provide("cart", cart);
        app.mount("#app")

block content
    .content
        #app.block
            <Entry :entry=entry></Entry>
